!!! 5
%html
  %head
    %meta{'http-equiv' => 'content-type', :content => 'text/html; charset=utf-8'}
    %title= "Webobots"
    = stylesheet_link_tag *%w{style}
    = formtastic_stylesheet_link_tag
    = javascript_include_tag *%w{}
    %link{:rel => 'icon', :href => '/favicon.ico', :type => 'image/x-icon'}
    %link{:rel => 'shortcut icon', :href => '/favicon.ico', :type => 'image/x-icon'}

  %body
    %header
      %h1 Webobots Site
    %nav
      - if current_user
        = link_to "Аккаунт", account_path
        |
        = link_to "Прошивки", firmwares_path
        |
        = link_to "Матчи", matches_path
        |
        = link_to "Рейтинг", users_rating_path
        |
        = link_to "Выйти", logout_path
      - else
        = link_to "Регистрация", signup_path
        |
        = link_to "Войти", login_path
    %section
      = yield
