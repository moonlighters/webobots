%h2 Просмотр информации о матче

%h3
  .vs_block
    .vs_left
      - fwv = @match.first_version
      = link_to_user fwv.user, :login => false, :avatar => :medium
      = link_to_firmware_version fwv
      <br/>
      автор
      = link_to_user fwv.user, :avatar => :none

    .vs_middle
      VS

    .vs_right
      - fwv = @match.second_version
      = link_to_user fwv.user, :login => false, :avatar => :medium
      = link_to_firmware_version fwv
      <br/>
      автор
      = link_to_user fwv.user, :avatar => :none
  .clear

- unless @match.user.nil?
  %p
    %b
      Матч инициирован игроком
      = link_to_user @match.user

- unless @match.draw?
  %p
    %b Победитель:
    = link_to_firmware_version @match.winner_version
  %p
    %b Получает:
    = format_points(@match.winner_points)
    очков рейтинга
- else
  %p
    %b Ничья!

%p
  = link_to "Повтор матча", play_match_path( @match ), :id => 'show-replay', :class => 'nyroModal'

= render :partial => 'comments/comments', :locals => {:commentable => @match, :comments => @comments}
