%h2= %Q{Прошивка "#{h @fw.name}"}


-# общая информация
%p
  %b Автор:
  = link_to_user @fw.user
%p
  %b Очки рейтинга:
  = format_points(@fw.rating_points)
%p
  %b Позиция в рейтинге:
  = @fw.rating_position.to_s + "-я из " + @fws_count.to_s
%p
  %b Исходный код:
  = @fw.shared? ? "открытый" : "закрытый"
  - if current_user.can_see_code_of? @fw
    = '(' + link_to( "просмотреть", code_firmware_path( @fw ), :id => "show-code", :class => 'nyroModal' ) + ')'
%p
  %b Доступность для сражения:
  = @fw.available? ? "доступна" : "не доступна"
%p
  %b Последняя версия прошивки:
  = link_to_firmware_version_with_message @fwv

-# действия
%p
  - if current_user.can_fight_with? @fw
    = link_to "Сразиться!", new_match_path(:enemy_fw => @fw)
    |
  - if current_user.owns? @fw
    = link_to( "Редактировать", edit_firmware_path(@fw) )
    |
  = link_to "История версий", firmware_versions_path(@fw)
  |
  = link_to "Список матчей", firmware_matches_path(@fw)

-# комментарии
= render :partial => 'comments/comments', :locals => {:commentable => @fw, :comments => @comments}

