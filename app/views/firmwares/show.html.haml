%h2= "Прошивка #{h @fw.name}"

%p
  %b Автор
  = link_to_user @fw.user
  
%p
  %b= "Последняя версия прошивки ##{@fw.versions.last_number}"
%p
  %b= "Синтаксис: #{@fw.syntax_errors.empty? ? '✔' : '✘'}"
  %ul= syntax_errors_list_for @fw

= link_to( 'Редактировать', edit_firmware_path(@fw) ) if current_user.owns? @fw

- code = @fw.versions.last.code
%p
  %hr
  %table
    %tr
      -# TODO: styles
      %td{:style => 'color: #aaaaaa;'}
        %pre= (1..code.lines.count).to_a * "\n"
      %td
        %pre= format_code( code )
  %hr

= link_to( 'Редактировать', edit_firmware_path(@fw) ) if current_user.owns? @fw
