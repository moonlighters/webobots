.left_column
  %nav
    %ul
      %li= link_to "Прошивка", firmware_path(@fw)
      - if current_user.owns? @fw
        %li= link_to( "Редактировать", edit_firmware_path(@fw) )
      %li= link_to "История версий", firmware_versions_path(@fw)
      %hr
      - if can_fight_with? @fw
        %li= link_to "Сразиться!", new_match_path(:enemy_fw => @fw)
      %li= link_to "Список матчей", firmware_matches_path(@fw)

.right_column
  %h2= %Q{Прошивка "#{h @fw.name}"}

  -# общая информация
  %dl
    %dt Автор
    %dd= link_to_user @fw.user

  %dl
    %dt Очки рейтинга
    %dd= format_points(@fw.rating_points)

  %dl
    %dt Позиция в рейтинге
    %dd= @fw.rating_position.to_s + "-я из " + @fws_count.to_s

  %dl
    %dt Исходный код
    %dd
      = @fw.shared? ? "открытый" : "закрытый"
      = '(' + link_to( "просмотреть", code_firmware_path( @fw ), :id => "show-code", :class => 'nyroModal' ) + ')' if can_see_code_of? @fw

  %dl
    %dt Сражения
    %dd= @fw.available? ? "разрешены" : "запрещены"

  %dl
    %dt Последняя версия
    %dd= link_to_firmware_version_with_message @fwv

  -# комментарии
  = render :partial => 'comments/comments', :locals => {:commentable => @fw, :comments => @comments}
.clear

