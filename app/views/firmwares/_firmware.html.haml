- fw = firmware

%li.firmware_entity
  .rating{:title => "Рейтинг"}= format_points fw.rating_points
  = render :partial => 'rating/match_digits_reverse', :locals => {:obj => fw}
  .body
    %span.name
      = image_tag 'firmware.png', :alt => "", :class => 'firmware_icon'
      = link_to_firmware fw
    %br
    %span.user
      от
      = link_to_user fw.user
