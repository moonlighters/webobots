- title "Вход"
- actions_for_anonymous

- semantic_form_for @user_session, :url => login_path do |f|
  = f.semantic_errors
  - f.inputs do
    = f.input :login, :input_html => {:size => 20}
    = f.input :password
    = f.input :remember_me, :as => :boolean
  - f.buttons do
    = f.commit_button :login
